{
    "name": "zorn-v/xmpp",
    "description": "Library for XMPP protocol (Jabber) connections",
    "type": "library",
    "license": "BSD-2-Clause",
    "homepage": "https://github.com/mdissington/xmpp",
    "keywords": [
        "jabber",
        "xmpp"
    ],
    "authors": [
        {
            "name": "Fabian Grutschus",
            "email": "f.grutschus@lubyte.de",
            "homepage": "http://www.lubyte.de/",
            "role": "developer"
        },
        {
            "name": "zorn-v",
            "role": "developer"
        },
        {
            "name": "Martyn Dissington",
            "homepage": "https://github.com/mdissington",
            "role": "developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Fabiang\\Xmpp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fabiang\\Xmpp\\": "tests/src/",
            "Fabiang\\Xmpp\\Integration\\": "tests/features/bootstrap/"
        }
    },
    "require": {
        "php": "^8.3",
        "psr/log": "^2.0 || ^3.0"
    },
    "require-dev": {
        "behat/behat": "^3.15",
        "monolog/monolog": "^3.9",
        "phpstan/phpstan": "^2.1.11",
        "phpstan/phpstan-strict-rules": "^2.0.4",
        "phpunit/php-code-coverage": "^12.1",
        "phpunit/phpunit": "^12"
    },
    "suggest": {
        "psr/log-implementation": "Allows more advanced logging of the XMPP connection"
    },
    "config": {
        "platform": {
            "php": "8.3"
        },
        "sort-packages": true
    },
    "archive": {
        "exclude": [
            ".gitignore",
            ".gitattributes",
            ".scrutinizer.yml",
            ".travis.yml",
            "/tests",
            "/docs",
            "/bin",
            "/example.php"
        ]
    }
}
